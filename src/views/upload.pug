extends layouts/main

block content
    .form-container
        form(action=`${routes.videos}${routes.upload}`, method="post", enctype="multipart/form-data")
            label(for="file") Video File
            input(type="file", id="file", name="videoFile", required=true, accept="video/*")
            input(type="text", name="title", placeholder="Title of Video", required=true) 
            textarea(name="description", placeholder="Description of Video", required=true)
            input(type="submit", value="Upload")