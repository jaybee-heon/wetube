extends layouts/main

block content
    .form-container
        form(action=`${routes.videos}${routes.editVideo}`, method="post")
            input(type="text", name="title", placeholder="Title of Video")
            textarea(name="description", placeholder="Description")
            input(type="submit", value="Update Video")
        a.form-container__link--delete(href=`${routes.videos}${routes.deleteVideo}`) Delete Video 